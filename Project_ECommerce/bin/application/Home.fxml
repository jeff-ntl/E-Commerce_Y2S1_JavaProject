<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #e3fdfd;" xmlns="http://javafx.com/javafx/8.0.191" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HomeController">
   <children>
      <BorderPane prefHeight="750.0" prefWidth="1100.0">
         <top>
            <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="750.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Label text="ECommerce" textAlignment="CENTER" textFill="#71c9ce">
                     <font>
                        <Font name="Comic Sans MS" size="40.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Welcome to ECommerce!" textFill="#71c9ce">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </top>
         <center>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #71c9ce;" stylesheets="@application.css" text="Log In" textFill="#e3fdfd">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="Comic Sans MS Bold" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="adminButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAdminButton" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #71c9ce;" stylesheets="@application.css" text="Admin" textFill="#e3fdfd">
                     <font>
                        <Font name="Comic Sans MS Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" top="200.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="registerButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleRegisterButton" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #71c9ce;" stylesheets="@application.css" text="Register" textFill="#e3fdfd">
                     <padding>
                        <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="Comic Sans MS Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </center>
         <bottom>
            <TextArea fx:id="txtFeedback" prefHeight="100.0" prefWidth="750.0" promptText="Response..." style="-fx-control-inner-background: #cbf1f5;" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
